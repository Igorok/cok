<script>
require(["jquery", "lodash", "cok_core", "cok_controller", "bootstrap"], function ($, _, cok_core, cok_controller) {
    $(function () {
        var _user = cok_controller.checkedUser();
        var token = _user.token;
        $("img").error(function () {
            $(this).unbind("error").attr("src", "/images/no-avatar.jpg");
        });


        $("#showPicModal").click(function () {
            $("#picUploadModal").modal("show");
        });

        $("#picUploadBtn").click(function () {
            var formData;
            var params;
            var file = document.getElementById("newPic").files[0];
            if (file) {
                formData = new FormData();
                formData.append('file', file);
                formData.append('action', "index.mainPicUpload");
                formData.append('token', token);
                $.ajax({
                    url: '/upload', //Server script to process data
                    type: 'POST',
                    success: function (ret) {
                        $("#newPic").val("");
                        console.log('success', ret);
                    },
                    error: function (ret) {
                        console.log('error', ret);
                    },
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false
                });
            }
            return false;
        });


    });
});
</script>

<div id="picUploadModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <form id="picUploadForm" enctype="multipart/form-data">
                    <input type="file" name="newPic" id="newPic" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="picUploadBtn" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>



