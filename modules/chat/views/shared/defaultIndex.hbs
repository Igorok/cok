<script>
require(["jquery", "lodash", "cok_core", "cok_controller", "bootstrap"], function ($, _, cok_core, cok_controller) {
    $(function () {
        var _user = cok_controller.checkedUser();
        var token = _user.token;
        var renderUser = function () {
            cok_core.call("user.getUserDetail", {token: token}, function (result) {
                cok_core.render ($("#defaultIndex"), "userDetailPartition", {data: result[0]});
            });
        };
        
        renderUser();
        $("img").error(function () {
            $(this).unbind("error").attr("src", "/images/no-avatar.jpg");
        });

//        defaultIndex
        $("#defaultIndex").on("click", "#showPicModal", function () {
            $("#picUploadModal").modal("show");
        });
        $("#picUploadBtn").click(function () {
            var file = document.getElementById("newPic").files[0];
            cok_core.upload("index.mainPicUpload", token, file, function (err, _result) {
                $("#newPic").val("");
                $("#picUploadModal").modal("hide");
                if (err) {
                    cok_core.error(err);
                } else {
                    renderUser();
                }
            });
            return false;
        });
        
    });
});
</script>

<div id="picUploadModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <form id="picUploadForm" enctype="multipart/form-data">
                    <input type="file" name="newPic" id="newPic" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="picUploadBtn" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="sub-container" id="defaultIndex"></div>
