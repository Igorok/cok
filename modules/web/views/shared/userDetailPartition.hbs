    <div class="col-md-3">
        <img src="{{#picture}}/images/users/{{.}}{{/picture}}{{^picture}}/images/no-avatar.jpg{{/picture}}" alt="" class="img-thumbnail">
        <br><br>
        <button id="showPicModal" class="btn btn-default btn-block">
            <span class="glyphicon glyphicon-arrow-up"></span>
            Change picture
        </button>
    </div>
    <div class="col-md-9">
        <br>
        <p>{{login}}</p>
        <p>{{email}}</p>
    </div>
</div>
{{/data}}